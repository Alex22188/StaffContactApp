<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StaffContactApp.PeopleDetails"
             Title="PeopleDetails">


    <StackLayout>
        <Frame BackgroundColor="Maroon" Padding="10" Margin="20">
            <StackLayout>

                <Label Text="{Binding Name}"/>
                <Label Text="{Binding Phone}"/>
                <Label Text="{Binding Department}"/>
                <Label Text="{Binding AddressStreet}"/>
                <Label Text="{Binding AddressCity}"/>
                <Label Text="{Binding AddressState}"/>
                <Label Text="{Binding AddressZIP}"/>
                <Label Text="{Binding AddressCountry}"/>

            </StackLayout>
        </Frame>
    </StackLayout>



</ContentPage>